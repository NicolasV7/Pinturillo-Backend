{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "src/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@controller/*": ["controller/*"],
      "@dto/*": ["dto/*"],
      "@entity/*": ["entity/*"],
      "@middleware/*": ["middleware/*"],
      "@repository/*": ["repository/*"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"],
      "@service/*": ["service/*"]
    },
    "lib": ["es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  }
}
